package step01_syntax;

public class Ex03Operation {

	public static void main(String[] args) {
		// 숫자 연산 : +, -, *, /, %
		int v1 = 10;
		int v2 = 3;
		
		System.out.println(v1 % v2);
		
		// 증감 연산 : ++, -- 
		System.out.println(++ v1); // 11
		System.out.println(v1 ++); // 11
		System.out.println(v1); // 12
		
		// 기본 연산
		byte v3 = 10;
		byte v4 = 3;
		byte v5 = (byte) (v3 + v4);
		System.out.println(v5);
	}

}
